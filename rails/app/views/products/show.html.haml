- title "Product"

= image_tag @product.photo.url(:small) unless @product.photo.updated_at.nil?
%p
  %strong Brand:
  = @product.brand.name
%p
  %strong Name:
  = @product.name
%p
  %strong Description:
  = @product.description
%p
  %strong Source:
  = @product.source
%p
  %strong Materials:
  = @product.materials
%h1 Who has it?
= render @product.exhibits

%p
  = link_to "Edit", edit_product_path(@product)
  |
  = link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", products_path
