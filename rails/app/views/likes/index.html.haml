- title "Likes"

%table
  %tr
    %th Person
    %th Likable
  - for like in @likes
    %tr
      %td= like.person
      %td= like.likable
      %td= link_to 'Show', like
      %td= link_to 'Edit', edit_like_path(like)
      %td= link_to 'Destroy', like, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Like", new_like_path
